{
  "name": "@patchin/cli",
  "version": "0.2.0",
  "description": "Token-efficient CLI for Patchin - access your connected APIs from any agent",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weekend-systems/patchin.git",
    "directory": "packages/cli"
  },
  "bin": {
    "patchin": "dist/bin/patchin.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "build:binary": "bun build ./bin/patchin.ts --compile --outfile=./releases/patchin",
    "build:binary:all": "npm run build:binary:darwin-arm64 && npm run build:binary:darwin-x64 && npm run build:binary:linux-arm64 && npm run build:binary:linux-x64",
    "build:binary:darwin-arm64": "bun build ./bin/patchin.ts --compile --target=bun-darwin-arm64 --outfile=./releases/patchin-darwin-arm64",
    "build:binary:darwin-x64": "bun build ./bin/patchin.ts --compile --target=bun-darwin-x64 --outfile=./releases/patchin-darwin-x64",
    "build:binary:linux-arm64": "bun build ./bin/patchin.ts --compile --target=bun-linux-arm64 --outfile=./releases/patchin-linux-arm64",
    "build:binary:linux-x64": "bun build ./bin/patchin.ts --compile --target=bun-linux-x64 --outfile=./releases/patchin-linux-x64"
  },
  "dependencies": {
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "typescript": "^5"
  }
}
